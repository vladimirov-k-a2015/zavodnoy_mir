<h1>Авторы</h1>

<span class = "createAction">Create new</span>

<%=  link_to "Добавить нового автора", new_author_path %> 

<div id="author-form" style="display:none;">
</div>

<% if @authors.empty? %>
   <b>Список пуст</b>
<% else %>
<table>
	<tr>
		<th>id</th>
		<th>name</th>
		<th>country</th>
		<th>year</th>
		<th>note</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
    
    <% @authors.each do  |author| %>

    <tr>
		<td><%= author.id %></td>
		<td><%= author.name %></td>
		<td><%= author.country %></td>
		<td><%= author.years %></td>
		<td><%= author.note %></td>
		<td><%= link_to "Destroy", author, method: :delete, data: { confirm: "Точно удалить?"} %></td>
		<td><%= link_to 'Edit', edit_author_path(author) %></td>
		<td><%= link_to 'Edit2',  "/authors/#{author.id}/edit" %></td> 
		<td><%= link_to 'Show', author_path(author) %></td>
		
        


	</tr>
	<% end %>

</table>

	<% end %>
